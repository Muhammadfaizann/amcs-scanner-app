<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:localization="clr-namespace:amcs_scanner_app.Resources.Localization"
             x:Class="amcs_scanner_app.View.FlyoutAbmelden">
    <VerticalStackLayout Spacing="20"
                         VerticalOptions="CenterAndExpand"
                         Margin="25,20">
        <Label Text="{x:Static localization:AppResources.Logout}"
               SemanticProperties.HeadingLevel="Level1"
               TextColor="{StaticResource Accent00}"
               FontSize="18"
               HorizontalOptions="Center"
               Margin="20,0" />
    </VerticalStackLayout>
</ContentPage>